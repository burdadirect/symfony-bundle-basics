{
  "name": "burdadirect/symfony-bundle-basics",
  "description": "HBM Basics Bundle - Shared functionality (templates, controller, ...) for symfony projects.",
  "authors" : [{
    "name" : "Christian Puchinger",
    "email" : "puchinger@burda.com"
  }],
  "repositories" : [
    {
      "type": "vcs",
      "url": "git@github.com:burdadirect/codestyle.git"
    }
  ],
  "license": "MIT",
  "type": "symfony-bundle",
  "autoload": {
    "psr-4": {
      "HBM\\BasicsBundle\\": "src/"
    }
  },
  "require": {
    "php" : "^8.2.0",
    "ext-json": "*",
    "ext-iconv": "*",
    "doctrine/orm": "^2.5",
    "doctrine/doctrine-bundle": "^2.0",
    "doctrine/doctrine-fixtures-bundle": "^3.0",
    "fakerphp/faker": "^1.21",
    "liip/test-fixtures-bundle": "^2.0",
    "phpunit/phpunit": "^9.5",
    "symfony/browser-kit": "^7.0",
    "symfony/config": "^7.0",
    "symfony/dependency-injection": "^7.0",
    "symfony/form": "^7.0",
    "symfony/framework-bundle": "^7.0",
    "symfony/http-kernel": "^7.0",
    "symfony/monolog-bundle": "^3.4",
    "symfony/security-bundle": "^7.0",
    "symfony/stopwatch": "^7.0",
    "symfony/twig-bundle": "^7.0",
    "symfony/validator": "^7.0",
    "symfony/yaml": "^7.0"
  },
  "require-dev": {
    "burdadirect/codestyle": "dev-main",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "phpstan/extension-installer": true
    }
  }
}
