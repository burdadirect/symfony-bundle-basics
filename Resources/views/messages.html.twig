{% import '@HBMBasics/macros.html.twig' as macros %}

{# See: https://symfony.com/doc/current/session.html#avoid-starting-sessions-for-anonymous-users #}
{% if app.request.hasPreviousSession or forceFlashMessages|default(false) %}
  {% if app.session and app.session.flashbag %}
    {{ macros.messages(app.session.flashbag.get('error'), 'alert-danger') }}
    {{ macros.messages(app.session.flashbag.get('warning'), 'alert-warning') }}
    {{ macros.messages(app.session.flashbag.get('info'), 'alert-info') }}
    {{ macros.messages(app.session.flashbag.get('success'), 'alert-success') }}
  {% endif %}
{% endif %}
